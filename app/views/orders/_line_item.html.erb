<tr>
  <td>
    <%= image_tag product.image.tiny.url %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol line_item.item_price %>
  </td>
  <td>
    <div>
      <%= line_item.quantity %>
    </div>
  </td>
  <td>
    <%= humanized_money_with_symbol line_item.total_price %>
  </td>
</tr>